MAKRO_USERNAME=your_makro_username
MAKRO_PASSWORD=your_makro_password
MAKRO_API_KEY=your_makro_api_key
MAKRO_TIMEOUT=30000

# ===================================
# CONFIGURAÇÕES DO SERVIDOR
# ===================================
NODE_ENV=production
PORT=3000
HOST=localhost
API_VERSION=v1

# ===================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ===================================
# Para logs e cache local (SQLite por padrão)
DB_TYPE=sqlite
DB_PATH=./data/pedro-tiago-claude.db

# Para PostgreSQL (opcional)
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=pedro_tiago_claude
# DB_USER=postgres
# DB_PASSWORD=your_postgres_password

# ===================================
# CONFIGURAÇÕES DE LOGGING
# ===================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/pedro-tiago-claude.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_FORMAT=combined

# ===================================
# CONFIGURAÇÕES DE BACKUP
# ===================================
BACKUP_PATH=C:/Organizados/Backups/claude-integration
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=gzip
BACKUP_SCHEDULE=0 2 * * *

# Backup remoto (opcional)
BACKUP_CLOUD_PROVIDER=aws
BACKUP_CLOUD_BUCKET=pedro-tiago-backups
BACKUP_CLOUD_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ===================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===================================
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_chars
JWT_EXPIRES_IN=24h
API_RATE_LIMIT=100
CORS_ORIGIN=*
ENCRYPTION_KEY=your_32_character_encryption_key_12

# ===================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ===================================

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=pedrotiago@pedrotiagocontabilidade.com.br
SMTP_PASS=your_email_app_password

# WhatsApp API (opcional)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your_whatsapp_api_token
WHATSAPP_PHONE=5562999948445

# Telegram (opcional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ===================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ===================================
MONITOR_INTERVAL=300000
MONITOR_TIMEOUT=10000
MONITOR_RETRY_ATTEMPTS=3
HEALTH_CHECK_INTERVAL=60000

# Alertas
ALERT_EMAIL_ENABLED=true
ALERT_WHATSAPP_ENABLED=true
ALERT_TELEGRAM_ENABLED=false

# ===================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===================================
# Apenas para ambiente de desenvolvimento
DEBUG=pedro-tiago:*
NODE_OPTIONS=--max-old-space-size=2048
PUPPETEER_EXECUTABLE_PATH=

# ===================================
# CONFIGURAÇÕES DE CACHE
# ===================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_TYPE=memory
REDIS_URL=redis://localhost:6379

# ===================================
# CONFIGURAÇÕES DE RELATÓRIOS
# ===================================
REPORTS_PATH=./reports
REPORTS_TEMPLATE_PATH=./templates
REPORTS_FORMAT=pdf
REPORTS_COMPRESSION=true

# ===================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# ===================================
# Frequência de sincronização (em minutos)
SYNC_INTERVAL=240
SYNC_BATCH_SIZE=100
SYNC_TIMEOUT=300000

# Processamento de documentos
OCR_ENABLED=true
OCR_LANGUAGE=por
OCR_CONFIDENCE_THRESHOLD=80

# ===================================
# CONFIGURAÇÕES DE PERFORMANCE
# ===================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30000
MEMORY_LIMIT=1024
CPU_LIMIT=80

# ===================================
# VARIÁVEIS ESPECÍFICAS DO AMBIENTE
# ===================================
# Timezone do Brasil
TZ=America/Sao_Paulo

# Configurações do Windows
WINDOWS_SERVICE_NAME=PedroTiagoClaudeIntegration
WINDOWS_SERVICE_DESCRIPTION=Pedro Tiago Contabilidade - Claude Code Integration Service

# ===================================
# CONFIGURAÇÕES DE AUTOMAÇÃO
# ===================================
# Horários de execução automática
AUTO_BACKUP_TIME=02:00
AUTO_SYNC_TIME=06:00,12:00,18:00
AUTO_REPORTS_TIME=08:00
AUTO_MONITOR_ENABLED=true

